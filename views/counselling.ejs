	<section class="hero jumbotron">
		<div class="title-wrapper ">
			<div class="sub-title display-4">
				Need a career boost?
			</div>
			<div class="title display-3">
				Signup for counselling on any career.
			</div>
		</div>
	</section>

	<section class="form-area container  p-5 w-50">
		<form action="/counselling" method="POST">
			<div class="form-box border p-5">
				<div class="form-group row">
					 <div class="col-lg-4 col-form-label">
					 	<label>Name:</label>	
					 </div>
					  <div class="col-sm-8 ">
					 	<input type="text" name="name" class="form-control">	
					 </div>	
				</div>
				<div class="form-group">
					 <div class="col-sm-4 form-check form-check-inline">
					 	<label class="form-check-label">Gender:</label>	
					 </div>
					 <div class="form-check form-check-inline">
					 	<input type="radio" name="gender" value="male" id="male" class="form-check-input ">	
					 	<label class="form-check-label">Male</label>
					 	 </div>
					 <div class="form-check form-check-inline">
					 	<input type="radio" name="gender" value="female" id="female" class="form-check-input">
					 	<label class="form-check-label">Female</label>
					 </div>	
				</div>
				<div class="form-group row">
					 <div class="col-sm-4 col-form-label">
					 	<label>Date of birth:</label>	
					 </div>	
					  <div class="col-sm-8">
					 	<input type="date" name="date"  class="form-control">
					 </div>	
				</div>
				<div class="form-group row">
					 <div class="col-sm col-form-label">
					 	<label>Contact Informations:</label>	
					 </div>	
				</div>
				<div class="form-group row">
					 <div class="col-sm-4 col-form-label">
					 	<label>Phone no:</label>	
					 </div>	
					  <div class="col-sm-8">
					 	<input type="number" name="phone"  class="form-control">
					 </div>	
				</div>
				<div class="form-group row">
					 <div class="col-sm-4 col-form-label">
					 	<label>Email:</label>	
					 </div>	
					  <div class="col-sm-8">
					 	<input type="email" name="email"  class="form-control">
					 </div>	
				</div>
				<div class="d-flex justify-content-center">
					<button class="btn btn-primary">Submit</button>
				</div>
			</div>
		</form>
	</section>

