<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>careersNotification</title>
	 <meta name="viewport" content="width=device-width, initial-scale=1">

	 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

	 <link rel="stylesheet" type="text/css" href="common.css">
	 <link rel="stylesheet" type="text/css" href="nav.css">
	 <link rel="stylesheet" type="text/css" href="admin-pages.css">
</head>
<body>
	<header>
		<nav class="navigation-bar">
			<div class="nav-wrapper">
				<div class="brand">
					<div class="brand-text">
						<a href="/">KOLOS</a>
					</div>
				</div>
				<input id="toggle" type="checkbox">	
				<label class="menu-button" for="toggle"><i class="fa fa-bars" aria-hidden="true"></i></label>	
				<div class="links-wrapper" id="expand">
					<div class="nav-link">
						<a href="/logout">Logout!</a>
					</div>
					<div class="nav-link ">
						<a href="/admissionNotification">admissionNotification</a>
					</div>
					<div class="nav-link ">
						<a href="/counsellingData">counsellingData</a>
					</div>
					
					<div class="nav-link">
						<a href="/careersApplication">careersApplication</a>
					</div>
					<div class="nav-link">
						<a href="/contactsNotification">contactsNotification</a>
					</div>
					<div class="nav-link">
						<a href="/newCounsellor">newCounsellor</a>
					</div>
					<div class="nav-link">
						<a href="/CounsellorsList">CounsellorList</a>
					</div>
				</div>
			</div>
		</nav>
	</header>

	<section class="hero">
		<div class="body-wrapper">
			<div class="heading">
				<div class="header">
					Career Notification
				</div>
			</div>	
			<table border="solid">
				<tr>
					<th>Email</th>	
					<th>notified</th>
					<th>Control</th>
					<th>Delete button</th>
				</tr>
				 <%careersNotification.forEach(function(career){%>
				 <tr>
				 	<td><%=career.email%></td>
				 	<td><%=career.notified%></td>
				 	<% if(career.notified){%>
				 	<td>completed</td>
				    <%}else{%>
				    <form method="POST" action="/careersNotification/<%=career._id%>">
				    	<td><button>update</button></td>
				    </form>
				    <%}%>
				    <form method="POST" action="/careersNotification/<%=career._id%>/remove">
				    	<% if(career.notified){%>
				    		<td><button>delete</button></td>
				    	<%}else{%>
				    		<td>Not Completed</td>
				    	<%};%>
				    </form>
				 </tr>
				 <%});%>
			</table>
	</section>


</body>
</html>